# Configuración de Desarrollo (Renombrar a .env)

# Generar una nueva SECRET_KEY para cada entorno
SECRET_KEY=django-insecure-dev-key-change-me

# Debug activo para desarrollo
DEBUG=True

# Hosts y Orígenes permitidos (separados por coma)
ALLOWED_HOSTS=localhost,127.0.0.1
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Base de Datos (Ejemplo PostgreSQL local)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname
# O usar SQLite por defecto si no se define DATABASE_URL
